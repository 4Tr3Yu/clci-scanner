---
import "@fontsource-variable/raleway";
import Footer from "../components/Footer.astro";
interface Props {
	title: string;
	description: string;
}

const { title, description } = Astro.props;
---
<!doctype html>
<html class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta
		name="description"
		content={description}
		/>
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class=" bg-gradient-to-tr from-black to-emerald-950 min-h-[100vh]">
		<main class="max-w-[1024px] mx-auto px-4 " >
			<h1 class="text-3xl font-bold text-center p-4">CLCI Scanner</h1>

			<slot />
		</main>
		<Footer/>
	</body>
</html>
	<style is:global>
	:root {
		color-scheme: light dark;
	}
	html {
		font-family: "Raleway Variable", system-ui, sans-serif;
		background: #13151a;
	}
</style>
